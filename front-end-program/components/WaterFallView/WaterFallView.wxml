<!--Component/WaterFallView.wxml-->
<view class="fall-container">
    <block wx:for="{{list}}" wx:key="{{item.id}}">
      <template is='tasksCard' data="{{data:item}}" />
      
    </block>
</view>


<!-- 
data即第4行傳入的data:item; 
CardDetail即任務詳情页;
-->
<template name ='tasksCard'>
   <view class='task-img' id="{{data.pid}}" bindtap="toTaskDetail">
    <text>{{data.test}}</text>
  </view>
</template>

