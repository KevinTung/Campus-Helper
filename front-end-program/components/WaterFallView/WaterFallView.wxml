<template name='tasksCard'>
  <view class='task-img' bindtap="toTaskDetail">
    <van-cell-group>
      <van-cell title="{{data.task}}" value="{{data.score}}" />
      <van-cell title="{{data.start}}" value="{{data.end}}" />
      <van-cell title="{{data.username}}" value="{{data.money}}" />

    </van-cell-group>
    <text>\n</text>
  </view>
</template>

