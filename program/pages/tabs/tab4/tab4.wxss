Page {
  background: #f2f2f2;
}

.blank {
  height: 15rpx;
}
.comment-get{
  background-color: gray
}
.chat-hover{
  background-color: lightgray
}
text.time {
  color: gray;
  font-size: 25rpx;
}
text.nickname {
  font-size: 32rpx;
}
text.comment {
  font-size: 28rpx;
}
text.reply-icon {
  font-size: 24rpx;
  color: gray;
}
view.top-margin {
  height: 3rpx;
  background-color: lightgray
}
view .chatblock .hover{
  background-color: gray;
}



.secondLayer{
  padding-left: 60rpx;
}
.row{
  display: flex;
  flex-direction: row;
}
.first-layer-btn{
  width:150rpx;
  justify-content: right;
  font-size: 30rpx;
}
.inputView {
background-color: #fff;
line-height: 100rpx;
}
.inputText{
flex: block;
float: right;
text-align: right;
margin-right: 66rpx;
margin-top: 33rpx;
color: #cccccc;
font-size: 42rpx
}
.line {
width: 100%;
height: 3rpx;
background-color: #cccccc;
margin-top: 5rpx;
}
.bottom-margin{
height: 60rpx;
}
.small-avatar-view{
width: 90rpx;
}
.small-avatar{
width:  90rpx;
height: 90rpx;
border-radius: 100%;
}
.comment-block{
display:flex;
flex-direction: column;
}
.comment-info{
display:flex;
flex-direction: row;
}
.comment-user-name{
font-weight:bold;
}
.comment-time{
color: gray;
}
.comment-info-padding{
width: 50rpx;
}
.comment-info-line {
height: 3rpx;
font-size: 0.2rpx;
}
.comment{
color: gray;
}
.reply-top-blank{
height: 40rpx;
}

.reply{
display: flex;
flex-direction: row;
}
.reply-left{
background-color: lightgray;
width: 18rpx;
font-size: 0.2rpx;
}
.reply-right{
display: flex;
flex-direction: column;
}
.reply-text{
font-style: italic;
padding-left: 20rpx;
color: gray;
}
.reply-blank{
height:70rpx;
}
.reply-info{
display:flex;
flex-direction: row;
color:gray;
}
.reply-info-time{
padding-inline-start: 100rpx;
}
.reply-bottom-blank{
height: 40rpx;
}

.unread{
  background-color: red;
  color: white;
  width:40rpx;
  height:40rpx;
  border-radius:100%;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-top:15rpx;
  font-size:22rpx;
}
.from{
  color: gray;
  font-size: 20rpx;
}

.to{
  color:gray;
  font-size: 20rpx;
  padding-left: 20rpx;
}
