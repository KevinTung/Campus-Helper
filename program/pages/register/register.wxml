<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../images/loginLog.jpg"></image> 
 </view> 
 <view class="login-from"> 
  
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../images/name.png"></image> 
  <label class="loginLab">账号</label> 
  <input
    class="inputText"
    placeholder="请输入账号"
    bindinput="usernameInput"
    maxlength="10"
  /> 
 </view> 
 <view class="line"></view> 
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../images/key.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
  <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../images/key.png"></image>
  <label class="loginLab">确认密码</label> 
  <input class="inputText" password="true" placeholder="请再次输入密码" bindinput="passwordInputValidate" /> 
 </view>  

 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" bindtap="register">注册</button>
  <button
    class="auth-loginBtn"
    type="plain"
    open-type="getUserInfo"
    bindtap="auth"
  >微信授权注册
  </button> 
 </view> 
 <view class="logNavigator">
  <navigator class="regToLogin" url="/pages/login/login">已有账号？去登录</navigator>
 </view>
 </view> 
</view>